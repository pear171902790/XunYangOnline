<!--start-login-form-->
<div class="login-form">
    <h1>Facebook</h1>
    <form>
        <input type="text" placeholder="User Account" required />
        <input type="Password" placeholder="Password" required />
        <div class="submit">
            <input type="submit" value="Login">
        </div>
